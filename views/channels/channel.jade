extends ../layouts/inner_page

block scripts
  script(src='/javascript/socket.io.js')
  script(src='/javascript/client.js')


block content
  .row
    .col
      h1= title
      p Welcome to #{title}
  .row.justify-content-md-center
    .col.col-md-6
      form(id="nameform")
        .form-group
          label(for='name') Name
          input.form-control(type="text" id="name")
        .text-center
          button.btn.btn-primary.btn-block#connect(type="submit") Connect
        .text-center.d-none
          button.btn.btn-primary.btn-block#disconnect(type="submit" disabled) Disconnect
  hr
  .row.justify-content-md-center
    if admin
      .col.col-md-3.col-md-offset-3
        button.btn.btn-secondary.btn-block#hand-up(disabled) Hand Up
      .col.col-md-3.col-md-offset-3.d-none
        button.btn.btn-secondary.btn-block#hand-down(disabled) Hand Down
      .col.col-md-3
        button.btn.btn-secondary.btn-block#pass-conch(disabled) Pass Conch
    else
      .col.col-md-4.col-md-offset-4
        button.btn.btn-secondary.btn-block#hand-up(disabled) Hand Up
      .col.col-md-4.col-md-offset-4.d-none
        button.btn.btn-secondary.btn-block#hand-down(disabled) Hand Down
  hr
  .row
    .col
      h2 Conch Holder
      .conch-holder
      .timer
  .row
    .col-6
      h2 Users
      ul.users
    .col-6
      h2 Queue
      ol.queue
    
